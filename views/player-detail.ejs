                            <th>AVG</th>
                            <th>SR</th>
                            <th>100s</th>
                            <th>50s</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% player.recentBatting.forEach(stat => { %>
                        <tr>
                            <td><%= stat.type %></td>
                            <td><%= stat.matches %></td>
                            <td><%= stat.innings %></td>
                            <td><%= stat.runs %></td>
                            <td><%= stat.hs %></td>
                            <td><%= stat.avg %></td>
                            <td><%= stat.sr %></td>
                            <td><%= stat['100s'] %></td>
                            <td><%= stat['50s'] %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No recent batting statistics available</p>
            <% } %>

            <div class="stats-header" style="margin-top: 40px;">
                <span class="stats-icon">üìä</span>
                <h2>Recent Bowling Statistics</h2>
            </div>
            <% if (player.recentBowling && player.recentBowling.length > 0) { %>
                <table class="stats-table">
                    <thead>
                        <tr>
