<%- include('partials/header', { title: title, currentPage: '', cssFile: 'cart' }) %>

<div class="container">
    <div class="page-header">
        <h1>Shopping Cart</h1>
        <p>Review your items before checkout</p>
    </div>

    <div class="cart-content">
        <div class="cart-items">
            <h2>Your Shopping Cart</h2>
            <table class="cart-table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof cartItems !== 'undefined' && cartItems.length > 0) { %>
                        <% cartItems.forEach(item => { %>
                        <tr>
                            <td>
                                <div class="cart-product">
                                    <div class="item-image">
                                        <% if (isValidUrl(item.image)) { %>
                                            <img src="<%= item.image %>" width="80%" height="80%">
                                        <% } else { %>
                                            <%= item.image || 'ðŸ' %>
                                        <% } %>
                                    </div>
                                    <span class="item-name"><%= item.name %></span>
                                </div>
                            </td>
                            <td>$<%= item.price.toFixed(2) %></td>
                            <td>
                                <input type="number" value="<%= item.quantity || 1 %>" min="1" max="<%= item.stock || 100 %>" class="qty-input" data-item-id="<%= item.id %>">
                                <% if (item.stock !== undefined) { %>
                                    <small style="display: block; color: var(--darkgrey); margin-top: 4px;">Stock: <%= item.stock %></small>
                                <% } %>
                            </td>
                            <td>$<%= ((item.price || 0) * (item.quantity || 1)).toFixed(2) %></td>
                            <td>
                                <button class="remove-btn" data-item-id="<%= item.id %>">
                                    <span class="material-symbols-outlined">delete</span>
                                </button>
                            </td>
                        </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" style="text-align: center; padding: 40px;">
                                <p>Your cart is empty</p>
                                <a href="/shop" class="continue-shopping-btn" style="display: inline-block; margin-top: 20px;">Continue Shopping</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <% if (typeof cartItems !== 'undefined' && cartItems.length > 0) { %>
            <div class="cart-actions">
                <a href="/shop" class="continue-shopping-btn">Continue Shopping</a>
                <button class="update-cart-btn">Update cart</button>
            </div>
            <% } %>
        </div>

        <div class="cart-summary">
            <h2>Order Summary</h2>
            <% 
                let subtotal = 0;
                if (typeof cartItems !== 'undefined' && cartItems.length > 0) {
                    subtotal = cartItems.reduce((sum, item) => sum + (item.price || 0) * (item.quantity || 1), 0);
                }
                const shipping = 10.0;
                const tax = subtotal * 0.01;
                const total = subtotal + shipping + tax;
            %>
            <div class="summary-row">
                <span>Subtotal</span>
                <span>$<%= subtotal.toFixed(2) %></span>
            </div>
            <div class="summary-row">
                <span>Shipping</span>
                <span>$<%= shipping.toFixed(2) %></span>
            </div>
            <div class="summary-row">
                <span>Tax (1%)</span>
                <span>$<%= tax.toFixed(2) %></span>
            </div>
            <div class="summary-divider"></div>
            <div class="summary-row total">
                <span>Order Total</span>
                <span>$<%= total.toFixed(2) %></span>
            </div>
            <% if (typeof cartItems !== 'undefined' && cartItems.length > 0) { %>
            <a href="/checkout" class="checkout-btn">Proceed to Checkout</a>
            <% } %>
        </div>
    </div>
</div>

<script src="/js/cart.js"></script>
<%- include('partials/footer') %>

