<%- include('partials/header', { title: title, currentPage: '', cssFile: 'admin' }) %>

<div class="admin-container">
    <div class="admin-header">
        <h1>Admin Dashboard</h1>
        <p>Manage products and inventory</p>
    </div>

    <div class="admin-actions">
        <a href="/admin/products/new" class="btn btn-primary">
            <span class="material-symbols-outlined">add</span>
            Add New Product
        </a>
    </div>

    <div class="admin-content">
        <div class="products-table-container">
            <h2>Products</h2>
            <% if (typeof products !== 'undefined' && products.length > 0) { %>
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Brand</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                        <tr>
                            <td><%= product.id %></td>
                            <!-- <td><%= product.image || 'ðŸ' %></td> -->
                            <td>
                                <% if (isValidUrl(product.image)) { %>
                                    <img src="<%= product.image %>" width="10%" height="10%">
                                <% } else { %>
                                    <%= product.image || 'ðŸ' %>
                                <% } %>
                            </td>
                            <td><%= product.name %></td>
                            <td><%= product.brand || '-' %></td>
                            <td><%= product.category || '-' %></td>
                            <td>$<%= product.price.toFixed(2) %></td>
                            <td><%= product.stock || 0 %></td>
                            <td class="actions">
                                <a href="/admin/products/<%= product.id %>/edit" class="btn btn-edit">
                                    <span class="material-symbols-outlined">edit</span>
                                    Edit
                                </a>
                                <button class="btn btn-delete" data-product-id="<%= product.id %>" onclick="deleteProduct('<%= product.id %>')">
                                    <span class="material-symbols-outlined">delete</span>
                                    Delete
                                </button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p class="no-products">No products found. <a href="/admin/products/new">Add your first product</a></p>
            <% } %>
        </div>
    </div>
</div>

<script>
function deleteProduct(productId) {
    if (confirm('Are you sure you want to delete this product?')) {
        fetch(`/admin/products/${productId}/delete`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error deleting product');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting product');
        });
    }
}
</script>

<%- include('partials/footer') %>




